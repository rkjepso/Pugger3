
@code {
    #pragma warning disable 4014, 1998, 039
    static public string BoolStyle(bool b) => b ? "coolButton" : "coolButtonX";
}
<style>
    :root {
        --BaseColor : 220;
        --BaseColorInv : 240;
        --ColorIntensity : 100%;
        --StdFontFamily : "Century Gothic";
        --PanelBkColor : hsl(var(--BaseColor), var(--ColorIntensity), 80%);
        --BoderColor : white ; /*hsl(var(--BaseColor), 40% ,20%);*/
        --TextColor : hsl(var(--BaseColor), 100%, 100%);
        --TextColorDark : hsl(var(--BaseColor), 100%, 0%);
        --TextColorFlag: var(--TextColor);
        --ControlColor : hsl(var(--BaseColor), var(--ColorIntensity), 30%);
        --TableHeadColor : var(--ControlColor);
        --ProgramBkColor : hsl(var(--BaseColor), 10%, 90%);
        --TableBorder : solid black 1px;
        --HelpBkColor : hsl(var(--BaseColor), 80%, 70%);  /*#BDE5F8;*/


        --StdBorder :  0.05em solid black;/*var(--ControlColor);*/
        --FromWord : hsl(var(--BaseColor), 100%, 20%);
        --ToWord : hsl(var(--BaseColorInv), 100%, 20%);

        --BodyGradientFrom : hsla(var(--BaseColor), var(--ColorIntensity), 70%);
        --BodyGradientTo : hsla(var(--BaseColorInv), var(--ColorIntensity), 70%);

        --MenuGradientFrom : hsla(var(--BaseColor), var(--ColorIntensity), 40%);
        --MenuGradientTo : hsla(var(--BaseColor), var(--ColorIntensity), 70%);

        --TableGradientFrom : hsla(var(--BaseColor), var(--ColorIntensity), 40%);
        --TableGradientTo : hsla(var(--BaseColor), var(--ColorIntensity), 70%);

        --TableEvenFrom : hsla(var(--BaseColor), var(--ColorIntensity), 80%);
        --TableEvenTo   : hsla(var(--BaseColor), var(--ColorIntensity), 70%);
    }

    body {
        background-color: var(--ProgramBkColor);
        padding: 0px;
        margin: 0px;
        font-family:'kiak';
        font-size: 120%;
        background-image: linear-gradient(to right, var(--BodyGradientTo), var(--BodyGradientFrom));
    }

    p {
        color:var(--TextColorDark);
    }

    .coolP, label {
        color: var(--TextColorDark);
        line-height: 14px;
        margin: 1em 0em 0.2em 0.2em;
    }

     option, .coolDiv, .coolButtonX{
        background-color:var(--PanelBkColor);
        border: none ;
        display: inline-block;
        border-radius: 0.3em;
        color:var(--TextColor);
    }


    option
    {
        color:var(--TextColorDark);
    }

    .coolSelect, .coolButton, .coolButtonX, .coolSpan  {
        border: var(--StdBorder);
        background-color: var(--PanelBkColor);
        border-radius: 0.3em;
        display: inline-block;
        color:var(--TextColor);
    }
    .coolSelect, .coolButton {
        background-color: var(--ControlColor);

    }
    .coolSelect:hover, .coolButton:hover, .coolButtonX:hover {
        color: yellow;
        border: 0.15em solid red;
        background-color: hsl(235 80% 60%);
        padding: 0.0em 0.2em;
    }
    .coolSpan,  .coolSelect, .coolButton, .coolButtonX {
        padding : 0.1em 0.3em;
        border: var(--StdBorder);
    }
    .coolSelect, .coolButtonX, .coolButton, 
    .coolSelect:hover{
        margin : 1px;
    }
    .coolButtonX {
        color:var(--TextColorDark);
    }
    .coolSelect {
        padding: 0.3em 0.1em;
    }
    .coolSelect:hover {
        padding: 0.2em 0.0em;
    }

    .coolDiv {
        background-color: var(--PanelBkColor);
        padding: 0em 0.05em 0.2em 0.05em;
        text-align: left;
        width: 100%;
    }
    


    table.g_blueTable {
        border: 1px solid var(--BoderColor); /* #1C6EA4;*/
        background-color: #EEEEEE;
        width: 100%;
        text-align: left;
        border-collapse: collapse;
        margin: 0.5em 0em;
        font-size:1.1em;

    }

    table.g_blueTable td, table.g_blueTable th {
        padding: 1px 1px;
        width: 33%;
        white-space:nowrap;
    }

    table.g_blueTable tr:nth-child(even) {
        background: var(--PanelBkColor);
        background-image: linear-gradient(to right, var(--TableEvenFrom), var(--TableEvenTo));
    }

    table.g_blueTable thead {
        background: var(--TableHeadColor); 
        width: 33%;
    }

    table.g_blueTable thead th {
        color:var(--TextColor);
        border-left: 1px solid var(--BoderColor);
        color: white;
        font-weight:400;
        background-image: linear-gradient(to right, var(--TableGradientFrom), var(--TableGradientTo));
    }

    table.g_blueTable thead th:first-child {
        border-left: none;
    }

    .imgSmileyButton, .xsequental, .xrandom
    {
        height:1.7em;
        margin: 0em 0em 0.2em 0em;
    }

    .imgSmileyButton:hover
    {
        border: 0.15em  solid red;
        border-radius:100%;
    }
</style>
